# ============================================================================
# SYNERGEX .gitignore
# ============================================================================
# Files and folders to exclude from version control

# Environment Configuration - NEVER COMMIT THESE!
.env
.env.local
.env.production
.env.backup

# Database Files - NEVER COMMIT THESE!
*.sql
*.sql.gz
*.sql.zip
database*.sql
*_export.sql
synergex_cpanel_export.sql

# Testing/Debug Files - DELETE in production, never commit!
security-check.php
system-health.php
fix-database.php
test-*.php
reset-password.php
check-database.php
debug-login.php
verify-deployment.php
export-database-cpanel.php

# Logs
*.log
error_log
debug.log
logs/

# IDE and Editor Files
.vscode/
.idea/
*.swp
*.swo
*~
.DS_Store

# Temporary Files
tmp/
temp/
cache/

# Upload Files (keep the directory structure)
assets/images/uploads/*
!assets/images/uploads/.gitkeep

# Database backups
*.sql.backup
backup/

# Node Modules (if you add any frontend tools)
node_modules/
package-lock.json
yarn.lock

# Composer (if you add PHP dependencies)
vendor/
composer.lock

# OS Generated Files
Thumbs.db
.DS_Store
.AppleDouble
.LSOverride

# Backup Files
*.bak
*.backup
*.sql.gz
*.zip
*.tar.gz
